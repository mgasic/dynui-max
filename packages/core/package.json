{
  "name": "@dynui-max/core",
  "version": "0.1.1",
  "description": "Production-ready React + TypeScript component library with design tokens integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "pnpm clean && tsup --config tsup.config.ts && tsc --emitDeclarationOnly",
    "dev": "tsup --config tsup.config.ts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "vitest run --config vitest.a11y.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build"
  },
  "dependencies": {
    "@dynui-max/design-tokens": "workspace:*",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "react": "catalog:core",
    "react-dom": "catalog:core",
    "@types/react": "catalog:core",
    "@types/react-dom": "catalog:core",
    
    "typescript": "catalog:typescript",
    
    "vite": "catalog:build",
    "tsup": "catalog:build",
    "@vitejs/plugin-react": "catalog:build",
    "rimraf": "catalog:tooling",
    
    "vitest": "catalog:testing",
    "@testing-library/jest-dom": "catalog:testing",
    "@testing-library/react": "catalog:testing",
    "@testing-library/user-event": "catalog:testing",
    "@axe-core/react": "catalog:testing",
    "vitest-axe": "catalog:testing",
    
    "storybook": "catalog:storybook",
    "@storybook/addon-a11y": "catalog:storybook",
    "@storybook/addon-essentials": "catalog:storybook",
    "@storybook/addon-interactions": "catalog:storybook",
    "@storybook/react-vite": "catalog:storybook",
    "@storybook/test": "catalog:storybook",
    
    "eslint": "catalog:quality",
    
    "happy-dom": "^15.7.4"
  },
  "keywords": [
    "react",
    "typescript",
    "components",
    "design-system",
    "ui-library",
    "a11y",
    "design-tokens"
  ]
}