{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "storybook-static/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "package.json", "tsconfig*.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "*.test.*"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "*.test.*"],
      "outputs": ["coverage/**"]
    },
    "test:a11y": {
      "dependsOn": ["storybook:build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "**/*.stories.*"],
      "outputs": ["test-results/**"]
    },
    "lint": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "*.json", "*.js", "*.ts", ".eslintrc*"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig*.json"]
    },
    "quality:gates": {
      "dependsOn": ["typecheck", "lint", "test:coverage"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": ["src/**", "**/*.stories.*", ".storybook/**"]
    },
    "docs:build": {
      "dependsOn": ["^build"],
      "inputs": [
        "../../packages/core/src/**/*.ts",
        "../../packages/core/src/**/*.tsx",
        "typedoc.json",
        "custom.css"
      ],
      "outputs": ["dist/**"]
    },
    "playground": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "playground:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "index.html", "vite.config.*"]
    },
    "publish": {
      "dependsOn": ["build", "quality:gates"],
      "inputs": ["package.json", "dist/**", "lib/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "STORYBOOK_*",
    "NPM_TOKEN"
  ]
}